<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_bitmap"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius"
        android:padding="20dp"
        android:text="Hello World!"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_boder"
        android:backgroundTint="@color/yellow"
        android:padding="20dp"
        android:text="Hello World!"
        android:textColor="@color/purple_700"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_oval"
        android:padding="20dp"
        android:src="@drawable/ic_image"
        android:visibility="gone"
        app:tint="@color/white" />


    <!--loading-->
    <ProgressBar
        android:visibility="gone"
        style="@style/TextAppearance.AppCompat.Large.Inverse"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:indeterminateBehavior="cycle"
        android:indeterminateDrawable="@drawable/bg_loading"
        android:indeterminateDuration="1000" />

    <!--loading-->
    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:max="100"
        android:progress="30"
        android:progressDrawable="@drawable/bg_progress"
        android:secondaryProgress="50" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_edittext"
        android:hint="phone"
        android:inputType="phone"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:src="@drawable/bg_lv_play"
        app:tint="@color/yellow" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_state_button"
        android:clickable="true"
        android:focusable="true"
        android:enabled="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="Hello"
        android:textColor="@color/black"
        android:textSize="30sp" />
    <ImageView
        android:padding="20dp"
        android:src="@drawable/bg_pin"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:id="@+id/iv_pin"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
</LinearLayout>